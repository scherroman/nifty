{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "tests/**/*.ts",
        "scripts/**/*.ts",
        "deployment/**/*.ts",
        "utilities/**/*.ts",
        "configuration/**/*.ts"
    ],
    "files": ["hardhat.config.ts"]
}
